 <div id="wrapper">
    <!-- Sidebar -->
    {{>barra_lateral}}
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        {{>nav}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-1">
            <h1 class="h3 mb-0 text-gray-800">Venta</h1>
            {{>producto_pegatina}}
          </div>

          <!-- ptegatina-->
          <!-- Content Row -->

          <div class="row">
            <!-- contenedor para la venta  -->
            <div class="col-xl-5 col-lg-6">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Vender Producto</h6>
                  <form class="user" action="/tarea/venta/vender" method="post">
                    <button type="submit" class="btn btn-success btn-block">Vender</button>
                  </form>
                  <form class="user" action="/tarea/venta/cancelar" method="post">
                    <button type="submit" class="btn btn-danger btn-block">Cancelar</button>
                  </form>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-border dataTable">
                            <thead>
                              <tr>
                                <th>Quitar</th>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                              </tr>
                            </thead>
                            <tfoot>
                              <tr>
                                <th>Quitar</th>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                              </tr>
                            </tfoot>
                            <tbody>
                              {{#each venta_actual}}
                                <tr>
                                  <td>
                                    <form class="user" action="/tarea/venta/delete/{{id_producto}}" method="post">
                                      <button type="submit" class="btn btn-danger btn-block"><i class="far fa-trash-alt"></i></button>
                                    </form>
                                  </td>
                                  <td>{{nombre_producto}}</td>
                                  <td>{{cantidad}}</td>
                                  <td>{{precio_venta}}</td>
                                </tr>
                              {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
              </div>

            </div>
<!-- contenedor para la venta  -->
            <!-- Area Chart -->
            <div class="col-xl-7 col-lg-6">
            <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Lista de Productos</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                  <div class="dataTables_wrapper dt-bootstrap4" id="dataTable_wrapper">
                      <div class="row">
                          <div class="col-sm-12">
                              <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                   <thead>
                                    <tr>
                                      <th>Código</th>
                                      <th>Nombre</th>
                                      <th>Cantidad Disponible</th>
                                      <th>Precio Unidad</th>
                                      <th>Vender</th>
                                    </tr>
                                  </thead>
                                  <tfoot>
                                    <tr>
                                        <th>Código</th>
                                      <th>Nombre</th>
                                      <th>Cantidad Disponible</th>
                                      <th>Precio Unidad</th>
                                      <th>Vender</th>
                                    </tr>
                                  </tfoot>
                                  <tbody>
                                    {{#each producto}}
                                      <tr>
                                        <td>{{ codigo }}</td>
                                        <td>{{nombre_producto}}</td>
                                        <td>{{stock}}</td>
                                        <td>{{precio}}</td>
                                        <td>
                                          <a class="btn btn-success btn-block" href="/tarea/venta/{{_id}}"><i class="fas fa-shopping-cart"></i></a>
                                        </td>
                                      </tr>
                                    {{/each}}
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>
            </div>
            </div>
          </div>
</div>
          </div>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

  </div>
  {{#if visible}}
  {{>popup_venta}}
  {{/if}}
